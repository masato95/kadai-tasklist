<% if logged_in? %>
  <p>ログイン完了ユーザ： <%= current_user.name %></p>
  <div>
    <h1>タスク一覧</h1>
    <ul>
      <% @tasks.each do |task| %>
        <li><%= link_to task.id, task %> : <%= task.status %> &gt; <%= task.content %></li>
      <% end %>
    </ul>
  </div>
  <%= link_to '新規タスクの投稿', new_task_path %>
<% else %>
  <div>
    <h1>Welcome to the Tasklists</h1>
    <%= link_to 'Sign up now!', signup_path %>
  </div>
<% end %>