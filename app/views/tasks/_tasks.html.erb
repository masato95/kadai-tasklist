<ul>
  <% tasks.each do |task| %>
    <li>
      <div>
        <div>
          <%= link_to task.user.name, user_path(task.user) %> <span>posted at <%= task.created_at %></span>
        </div>
        <div>
          <p>ステータス：<%= task.status %> &gt; タスク：<%= task.content %></p>
        </div>
        <div>
          <% if current_user == task.user %>
            <%= link_to "Delete", task, method: :delete, data: { confirm: "You sure?" } %>
          <% end %>
        </div>
      </div>
    </li>
  <% end %>
  <%= paginate tasks %>
</ul>